<h1>Nuevo articulo de portafolio</h1>


<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="field">

    <%# Titulo %>
    <%= form.label :title%>
    <%= form.text_field :title, id: :portfolio_title %>
  </div>

  <div class="field">
    <%# Subtitulo %>
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :portfolio_subtitle %>
  </div>

  <div class="field">
    <%# Resumen %>
    <%= form.label :body%>
    <%= form.text_area :body, id: :portfolio_body %>
  </div>
  <%#Agregamos Technologies al formulario  %>
  <ul>
    <%= form.fields_for :technologies do |technology_form| %>
      <li>
        <%#Nombre de la Tecnologia%>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>